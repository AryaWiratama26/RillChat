<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RillChat" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primary_dark</item>
        <item name="floatingActionButtonStyle" type="style">@style/FloatingActionButtonStyle</item>
    </style>
    <style name="Theme.RillChat" parent="Base.Theme.RillChat" />

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearance">@style/FabShapeStyle1</item>
    </style>

    <style name="FabShapeStyle1" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>
</resources>